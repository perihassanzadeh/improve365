{
    "designSystemName": "GymApp Profile Design System",
    "version": "1.1.0",
    "description": "A design system focused on a clean, modern, minimalist aesthetic for a user profile screen, optimized for dark mode with subtle visual cues, emphasizing gradients and nuanced shadows.",
    "globalProperties": {
      "theme": "dark",
      "fontFamily": "Inter, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif",
      "borderRadius": "8px",
      "transitionDuration": "0.2s",
      "transitionTimingFunction": "ease-in-out"
    },
    "colorPalette": {
      "background": {
        "primary": "#1A1A2E",
        "secondary": "#2B2B4A",
        "tertiary": "#3D3D60"
      },
      "text": {
        "primary": "#E0E0FF",
        "secondary": "#B0B0D0",
        "heading": "#FFFFFF",
        "accent": "#6C63FF"
      },
      "border": {
        "light": "rgba(255, 255, 255, 0.1)",
        "medium": "rgba(255, 255, 255, 0.2)"
      },
      "accent": {
        "primary": "#6C63FF",
        "secondary": "#8A83FF"
      },
      "icon": {
        "default": "#B0B0D0",
        "active": "#FFFFFF",
        "accent": "#6C63FF"
      },
      "gradients": {
        "primaryAccentGradient": "linear-gradient(135deg, #6C63FF 0%, #8A83FF 100%)",
        "subtleBackgroundGradient": "linear-gradient(180deg, #2B2B4A 0%, #1A1A2E 100%)"
      }
    },
    "typography": {
      "h1": {
        "fontSize": "2.5rem",
        "fontWeight": "700",
        "lineHeight": "1.2"
      },
      "h2": {
        "fontSize": "1.8rem",
        "fontWeight": "600",
        "lineHeight": "1.3"
      },
      "h3": {
        "fontSize": "1.4rem",
        "fontWeight": "500",
        "lineHeight": "1.4"
      },
      "bodyLarge": {
        "fontSize": "1.1rem",
        "fontWeight": "400",
        "lineHeight": "1.5"
      },
      "bodyRegular": {
        "fontSize": "1rem",
        "fontWeight": "400",
        "lineHeight": "1.6"
      },
      "bodySmall": {
        "fontSize": "0.875rem",
        "fontWeight": "300",
        "lineHeight": "1.5"
      },
      "label": {
        "fontSize": "0.75rem",
        "fontWeight": "600",
        "textTransform": "uppercase",
        "letterSpacing": "0.05em",
        "color": "#B0B0D0"
      }
    },
    "spacing": {
      "unit": "8px",
      "xxs": "4px",
      "xs": "8px",
      "sm": "16px",
      "md": "24px",
      "lg": "32px",
      "xl": "48px",
      "xxl": "64px"
    },
    "dropShadows": {
      "light": "0 2px 5px rgba(0, 0, 0, 0.1)",
      "medium": "0 4px 10px rgba(0, 0, 0, 0.2)",
      "elevated": "0 8px 25px rgba(0, 0, 0, 0.4)",
      "subtleBlur": "0 0 10px rgba(108, 99, 255, 0.1)"
    },
    "components": {
      "profilePicture": {
        "shape": "circle",
        "size": "120px",
        "border": "2px solid #6C63FF",
        "shadow": "dropShadows.elevated",
        "subtleAccentGlow": "dropShadows.subtleBlur"
      },
      "card": {
        "backgroundColor": "background.secondary",
        "padding": "spacing.lg",
        "borderRadius": "borderRadius",
        "shadow": "dropShadows.medium",
        "backgroundGradient": "gradients.subtleBackgroundGradient"
      },
      "button": {
        "primary": {
          "backgroundColor": "accent.primary",
          "backgroundGradient": "gradients.primaryAccentGradient",
          "textColor": "text.heading",
          "padding": "spacing.sm spacing.md",
          "borderRadius": "borderRadius",
          "fontWeight": "600",
          "hoverOpacity": "0.9",
          "shadow": "dropShadows.light"
        },
        "secondary": {
          "backgroundColor": "transparent",
          "borderColor": "border.medium",
          "textColor": "text.primary",
          "padding": "spacing.sm spacing.md",
          "borderRadius": "borderRadius",
          "fontWeight": "500",
          "hoverBackgroundColor": "background.tertiary"
        }
      },
      "inputField": {
        "backgroundColor": "background.tertiary",
        "textColor": "text.primary",
        "borderColor": "border.light",
        "borderRadius": "borderRadius",
        "padding": "spacing.xs spacing.sm",
        "focusBorderColor": "accent.primary",
        "shadow": "dropShadows.light"
      },
      "sectionDivider": {
        "height": "1px",
        "backgroundColor": "border.medium",
        "marginVertical": "spacing.lg"
      }
    },
    "structure": {
      "layout": {
        "maxWidth": "800px",
        "horizontalCentering": true,
        "paddingDesktop": "spacing.xl",
        "paddingMobile": "spacing.md"
      },
      "profileHeader": {
        "alignment": "center",
        "verticalSpacing": "spacing.lg"
      },
      "contentSections": {
        "arrangement": "vertical stack",
        "gapBetweenSections": "spacing.xl"
      },
      "metricsGrid": {
        "columns": "2-3 (responsive)",
        "gap": "spacing.md"
      }
    },
    "icons": {
      "style": "outline",
      "color": "icon.default",
      "size": "24px"
    },
    "responsiveGuidelines": {
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px"
      },
      "textScaling": "Decrease font sizes slightly on smaller screens",
      "layoutAdaptation": "Switch from multi-column to single-column layout on smaller screens; adjust padding and margins."
    }
  }
  